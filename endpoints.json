{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },

  "GET /api/articles/:article_id/": {
    "description": "serves an array of an article found by its id number",
    "queries": ["article_id"],
    "exampleResponse": {
      "articleId": [
        {
          "article_id": 1,
          "title": " Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": " I find this existence challenging",
          "created_at": "2020-07-09 21:11:00",
          "votes": 100,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },

  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of article comments found by its article_id number",
    "queries": ["article_id"],
    "exampleResponse": {
      "articleId": [
        {
          "article_id": 1,
          "title": " Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": " I find this existence challenging",
          "created_at": "2020-07-09 21:11:00",
          "votes": 100,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },

  "POST /api/articles/:article_id/comments": {
    "description": "Adds a new comment to an article found by its ID",
    "queries": ["article_id"],
    "exampleResponse": {
      "comment": {
        "comment_id": 2,
        "body": "This is a new comment.",
        "author": "icellusedkars",
        "created_at": "2020-07-10T21:11:00Z",
        "votes": 0
      }
    }
  },

  "PATCH /api/articles/:article_id": {
    "description": "Updates an existing article found by its ID",
    "queries": ["article_id"],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Updated title",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "Updated body text.",
        "created_at": "2020-07-09T21:11:00Z",
        "votes": 100,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },

  "DELETE /api/comments/:comment_id": {
    "description": "serves an array of comments found by its comment id number and deletes",
    "queries": ["comment_id"],
    "exampleResponse": {
      "comment_id": [{}]
    }
  },

  "GET /api/users": {
    "description": "serves an array of users found in the database",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "butter_bridge",
          "name": "jonny",
